                android:textColor="@color/myColorGreyLight" />

            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_postdate1"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="|"
                android:textColor="@color/myColorGreyLight"></TextView>

            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_totalview"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Total View: "
                android:textColor="@color/myColorGreyLight" />

            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_totalview1"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="" />


