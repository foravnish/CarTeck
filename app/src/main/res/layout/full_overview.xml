        <carteckh.carteckh.util.PredicateLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_postby"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Post By: "
                android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/myColorGreyLight" />


            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_postby1"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="|"
                android:textColor="@color/myColorGreyLight"></TextView>


            <carteckh.carteckh.util.CustomTextView
                android:id="@+id/tv_postdate"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
